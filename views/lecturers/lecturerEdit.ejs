<div class="container-fluid py-4">
    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>
    <div class="card">
        <div class="card-header">
            Edit lecturers
        </div>
        <div class="card-body">
            <form action="/lecturers/update/<%= id %>" method="post">
                <div class="form-group">
                    <label>Name:</label>
                    <input type="text" class="form-control" name="name" value="<%= name %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Code:</label>
                    <input type="text" class="form-control" name="code" value="<%= code %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="birthday">Birthday:</label>
                    <input type="date" class="form-control" id="birthday" name="birthday" value="<%= birthday.toISOString().slice(0, 10) %>">
                </div>
                <div class="form-group">
                    <label>Gender:</label>
                    <select id="gender" name="gender" class="form-control" value="<%= gender %>">
                        <% if (gender == 'Nam') { %>
                            <option value="Nam" selected>Nam</option>
                            <option value="Nữ">Nữ</option>
                        <% } else { %>
                            <option value="Nam">Nam</option>
                            <option value="Nữ" selected>Nữ</option>
                        <% } %>

                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Update"/>
                </div>
            </form>
        </div>
    </div>
</div>
