<div class="container-fluid py-4">
    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>
    <div class="card">
        <div class="card-header">
            Edit Subject
        </div>
        <div class="card-body">
            <form action="/subjects/update/<%= id %>" method="post">
                <div class="form-group">
                    <label>Name:</label>
                    <input type="text" class="form-control" name="name" value="<%= name %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Code:</label>
                    <input type="text" class="form-control" name="code" value="<%= code %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Total_hours:</label>
                    <input type="text" class="form-control" name="total_hours" value="<%= total_hours %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>room_id:</label>
                    <input type="text" class="form-control" name="room_id" value="<%= room_id %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Update"/>
                </div>
            </form>
        </div>
    </div>
</div>
